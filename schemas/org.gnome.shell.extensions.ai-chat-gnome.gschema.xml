<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="ai-chat-gnome">
    <schema id="org.gnome.shell.extensions.ai-chat-gnome" 
            path="/org/gnome/shell/extensions/ai-chat-gnome/">
        
        <key name="window-width" type="i">
            <default>1150</default>
            <summary>Default window width</summary>
            <description>The default width for the AI chat window</description>
        </key>
        
        <key name="window-height" type="i">
            <default>650</default>
            <summary>Default window height</summary>
            <description>The default height for the AI chat window</description>
        </key>
        
        <key name="chat-url" type="s">
            <default>'https://chat.openai.com/chat'</default>
            <summary>Chat service URL</summary>
            <description>The URL of the AI chat service to load</description>
        </key>
        
    </schema>
</schemalist>